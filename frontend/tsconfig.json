{
  "compilerOptions": {
    "target": "es2020", // or "esnext" for the latest features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Do not emit output files, let Babel/Webpack handle it
    "incremental": true, // Enable incremental compilation for faster rebuilds
    "module": "esnext", // Important: Use ESNext module system
    "moduleResolution": "node", // How modules are resolved (classic or node)
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Important: Enable JSX processing for React
    "baseUrl": "./src" // Optional: for absolute imports from 'src'
  },
  "include": [
    "src" // Include all files in the src directory
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "build"         // Exclude build directory
  ]
}
